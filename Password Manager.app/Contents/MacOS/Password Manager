#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Path to the actual password manager binary
BINARY_PATH="$SCRIPT_DIR/Password-Manager-Binary"

# Check if binary exists
if [ ! -f "$BINARY_PATH" ]; then
    echo "Error: Password Manager binary not found at $BINARY_PATH"
    exit 1
fi

# Open a new Terminal window and run the password manager
osascript -e "tell application \"Terminal\" to do script \"cd '$SCRIPT_DIR' && './Password-Manager-Binary'; exit\""

# Bring Terminal to front
osascript -e "tell application \"Terminal\" to activate"